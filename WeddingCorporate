    <script>
        function wrapLabels(label, maxWidth) {
            if (typeof label !== 'string' || label.length <= maxWidth) {
                return label;
            }
            const words = label.split(' ');
            let lines = [];
            let currentLine = '';
            words.forEach(word => {
                if ((currentLine + ' ' + word).trim().length > maxWidth && currentLine.length > 0) {
                    lines.push(currentLine);
                    currentLine = word;
                } else {
                    currentLine = (currentLine + ' ' + word).trim();
                }
            });
            lines.push(currentLine);
            return lines;
        }

        const sharedTooltipConfig = {
            plugins: {
                tooltip: {
                    callbacks: {
                        title: function(tooltipItems) {
                            const item = tooltipItems[0];
                            let label = item.chart.data.labels[item.dataIndex];
                            if (Array.isArray(label)) {
                              return label.join(' ');
                            }
                            return label;
                        }
                    }
                }
            }
        };

        const weddingMarketData = {
            labels: ['Total Addressable Market (TAM)', 'Serviceable Addressable Market (SAM)', 'Serviceable Obtainable Market (SOM)'].map(l => wrapLabels(l, 16)),
            datasets: [{
                label: 'Market Size (in ‚Çπ Crores)',
                data: [1000000, 9000, 90], 
                backgroundColor: [
                    'rgba(255, 195, 0, 0.6)', 
                    'rgba(231, 29, 54, 0.6)',
                    'rgba(1, 22, 39, 0.6)'  
                ],
                borderColor: [
                    '#FFC300',
                    '#E71D36',
                    '#011627'
                ],
                borderWidth: 2
            }]
        };

        const corporateStylingData = {
            labels: ['‚Çπ20-30 LPA', '‚Çπ30-40 LPA', '‚Çπ40-50 LPA', '‚Çπ50+ LPA'].map(l => wrapLabels(l, 16)),
            datasets: [{
                label: 'Level of Interest (1-5 Scale)',
                data: [3.5, 4, 4.5, 5],
                backgroundColor: [
                    'rgba(255, 195, 0, 0.6)',
                    'rgba(231, 29, 54, 0.5)',
                    'rgba(231, 29, 54, 0.7)',
                    'rgba(231, 29, 54, 0.9)'
                ],
                 borderColor: [
                    '#FFC300',
                    '#E71D36',
                    '#E71D36',
                    '#E71D36'
                ],
                borderWidth: 2
            }]
        };

        window.onload = function() {
            const ctxWedding = document.getElementById('weddingMarketChart').getContext('2d');
            new Chart(ctxWedding, {
                type: 'bar',
                data: weddingMarketData,
                options: {
                    ...sharedTooltipConfig,
                    responsive: true,
                    maintainAspectRatio: false,
                    indexAxis: 'y',
                    scales: {
                        x: {
                            type: 'logarithmic',
                            title: {
                                display: true,
                                text: 'Market Size in ‚Çπ Crores (Logarithmic Scale)'
                            }
                        }
                    },
                    plugins: {
                        ...sharedTooltipConfig.plugins,
                        legend: {
                            display: false
                        },
                        title: {
                            display: true,
                            text: 'Indian Wedding Styling Market Opportunity',
                            font: {
                                size: 18
                            }
                        }
                    }
                }
            });

            const ctxCorporate = document.getElementById('corporateStylingChart').getContext('2d');
            new Chart(ctxCorporate, {
                type: 'bar',
                data: corporateStylingData,
                 options: {
                    ...sharedTooltipConfig,
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        y: {
                            beginAtZero: true,
                             max: 5,
                            title: {
                                display: true,
                                text: 'Interest Level (1=Low, 5=Extremely High)'
                            }
                        },
                        x: {
                             title: {
                                display: true,
                                text: 'Annual Income Bracket'
                            }
                        }
                    },
                     plugins: {
                        ...sharedTooltipConfig.plugins,
                        legend: {
                            display: false
                        },
                        title: {
                            display: true,
                            text: 'Demand for Corporate Styling by Income',
                            font: {
                                size: 18
                            }
                        }
                    }
                }
            });
        };
    </script>
